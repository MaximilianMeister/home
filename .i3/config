#bindsym $mod+d focus child


# default layout
workspace_layout tabbed

# new window border width
new_window pixel 1
new_float pixel 1

# switch to workspace
bindsym $mod+1 workspace 1:inet
bindsym $mod+2 workspace 2:term
bindsym $mod+3 workspace 3:mail
bindsym $mod+4 workspace 4:chat
bindsym $mod+5 workspace 5:mumble
bindsym $mod+6 workspace 6:groupwise
bindsym $mod+7 workspace 7

# switch to workspace left/right
bindsym Mod1+Shift+h workspace prev
bindsym Mod1+Shift+l workspace next

# move focused container to workspace
bindsym $mod+Mod1+1 move container to workspace 1:inet
bindsym $mod+Mod1+2 move container to workspace 2:term
bindsym $mod+Mod1+3 move container to workspace 3:mail
bindsym $mod+Mod1+4 move container to workspace 4:chat
bindsym $mod+Mod1+5 move container to workspace 5:mumble
bindsym $mod+Mod1+6 move container to workspace 6:groupwise
bindsym $mod+Mod1+7 move container to workspace 7

# custom clients on workspaces
assign [class="Firefox"] 1:inet
assign [class="Google-chrome"] 1:inet
assign [class="URxvt"] 2:term
assign [class="Thunderbird"] 3:mail
assign [class="Xchat"] 4:chat
assign [class="Mumble"] 5:mumble
assign [class="GroupWise"] 6:groupwise

# auto jump back
workspace_auto_back_and_forth yes

# disable auto focus
focus_follows_mouse no

# Move the current workspace to the next output
# (effectively toggles when you only have two outputs)
bindsym $mod+Tab move workspace to output right

# Put this window on the presentation output.
bindsym $mod+Mod1+Tab move container to output VGA


# reload the configuration file
bindsym $mod+Mod1+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Mod1+r restart
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# lock the screen
bindsym Control+Mod1+l exec i3lock -c 330000 --nofork

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3status
  colors {
    separator #666666
    background #000000
    statusline #ffffff
    focused_workspace #37B295 #37B295 #ffffff
    active_workspace #333333 #5f676a #ffffff
    inactive_workspace #333333 #222222 #888888
    urgent_workspace #2f343a #900000 #ffffff
  }
  position top
}

